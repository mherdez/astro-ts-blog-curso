---

interface Props {
  post: any;
}

const { post } = Astro.props;
const { title = 'Sin titulo', autor = '', desc = '', image = 'https://itsfoss.com/content/images/wordpress/2016/12/ubuntu-1704-wallpaper-default.jpg' } = post.frontmatter;

---

<article>
  <aside>
    <h1>{title}</h1>
    <h2>{autor}</h2>
    <p>{desc}</p>
    <a href={post.url}>Read more</a>
  </aside>
  <img src={image} alt={title} />
</article>

<style>
  article {
    display: flex;
    justify-content: space-between;
    align-items: start;
    border: 10px solid white;
    border-radius: 1rem;
    overflow: hidden;
    min-width: 770px;
  }

  article aside {
    padding: 2rem 3rem;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-direction: column;
    gap: 20px;
  }

  article aside h1 {
    font-size: 2rem;
    margin: 0;
    color: yellow;
  }

  article img {
    width: 300px;
    aspect-ratio: 1/1.4;
  }

  article h2 {
    font-size: 1.3rem;
    margin: 0;
    color: #fff;
  }

  article p {
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
    opacity: 0.8;
  }

  article a {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #000;
    color: yellow;
    text-decoration: none;
    border-radius: 0.25rem;
  }
</style>